  "version": "0.2.0",
  "configurations": [


  {
    "name": "launch chrome with new debugger (on local exist, not on remote)",
    "request": "launch",
    "type": "pwa-chrome",
    "url": "http://localhost:3000",
    // "webRoot": "${workspaceFolder}/my-app"
  },
  {
    "name": "launch chrome with legacy debugger",
    "request": "launch",
    "type": "chrome",
    "url": "http://localhost:3000",
    // "webRoot": "${workspaceFolder}/my-app"
  },
  {
    "name": "manual start  Chrome in remote debug mode",
    "request": "attach",
    "type": "chrome",
    "port": 9222
    // "url": "http://localhost:3000",
    // "webRoot": "${workspaceFolder}/my-app"
  },

    {
      "name": "drink-water (default)",
      "request": "launch",
      "type": "dart",
      "toolArgs": [
        "--web-port",
        "8080"
      ]
    },
    {
      "name": "drink-water (web-server)",
      "request": "launch",
      "type": "dart",
      "deviceId": "web-server",
      "toolArgs": [
        "--web-port",
        "8080"
      ]
    },
    {
      "name": "drink-water (profile mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile"
    }
  ]
}
